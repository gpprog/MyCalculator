<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid

                android:color="#65ffe5" />
            <stroke
                android:width="1dp"
                android:color="#53933f" />
            <corners
                android:radius="15dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/specialGreen"
                android:endColor="#000"
                android:angle="45" />
            <stroke

                android:color="@android:color/darker_gray" />
            <corners
                android:radius="15dp" />

        </shape>
    </item>
</selector>