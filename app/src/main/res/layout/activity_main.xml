<?xml version="1.0" encoding="utf-8"?>

<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryBackground"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="70dp"
    android:paddingRight="20dp"
    tools:context=".MainActivity">


    <!--    Screen area  -->


    <!--    End of screen Area  -->


    <!--    first row   -->


    <!--    second  row   -->


    <!--    third  row   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@drawable/screen_border"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_main_screen_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:fontFamily="serif-monospace"
            android:padding="25sp"
            android:text="@string/screen_text"
            android:textColor="@android:color/background_light"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="20"

        android:orientation="horizontal"
        android:weightSum="4">


        <ImageButton

            android:id="@+id/delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:src="@drawable/ic_delete_30dp"
            android:textSize="20sp">

        </ImageButton>


        <ImageButton
            android:id="@+id/MainActivity_clr_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:src="@drawable/ic_backspace"></ImageButton>

        <ImageButton

            android:id="@+id/done_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:src="@drawable/ic_done_green_40dp"></ImageButton>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:text="/"
            android:textSize="28sp"

            ></Button>

        <!--        end of  first row  -->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="7"
            android:textSize="28sp"

            ></Button>

        <Button

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="8"
            android:textSize="28sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="9"
            android:textSize="28sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:text="x"
            android:textSize="25sp"></Button>

        <!--        end of  second row  -->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="4"
            android:textSize="28sp"

            ></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="5"
            android:textSize="28sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="6"
            android:textSize="28sp"></Button>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:src="@drawable/ic_minus"


            >

        </ImageButton>


    </LinearLayout>

    <!--     end of  third row  -->


    <!--    fourth  row    -->


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="1"
            android:textSize="28sp"

            ></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="2"
            android:textSize="28sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="3"
            android:textSize="28sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:text="+"
            android:textSize="30sp"

            >

        </Button>

    </LinearLayout>

    <!--    end of fourth row  -->


    <!--    Last Row  -->


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/MainActivity_btn_zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="0"
            android:textSize="28sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="."
            android:textSize="28sp"

            >

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="+/-"
            android:textSize="22sp"

            ></Button>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_button"
            android:padding="5dp"
            android:text="="
            android:textSize="30sp">

        </Button>


    </LinearLayout>

    <!--    end of last row  -->


</LinearLayout>
        
        
        
        
        
        
    


