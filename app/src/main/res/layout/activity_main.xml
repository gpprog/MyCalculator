<?xml version="1.0" encoding="utf-8"?>

<LinearLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="100"
    tools:context=".MainActivity">

<!--    Screen area  -->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="25"
        android:background="@drawable/screen_border"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:padding="25sp"
            android:text="0.00"
            android:textColor="@android:color/background_light"
            android:textSize="28sp"

            />

    </LinearLayout>


<!--    End of screen Area  -->


    <!--    first row   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:minHeight="0dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:weightSum="4"

        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:src="@drawable/ic_delete_red_40dp"
            android:textSize="20sp"
            android:tint="@android:color/background_light"></ImageButton>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:src="@drawable/ic_clear_black_40dp"></ImageButton>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:src="@drawable/ic_done_green_40dp"></ImageButton>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:text="/"
            android:textSize="35sp"

            ></Button>


    </LinearLayout>


    <!--    second  row   -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:minHeight="0dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="7"
            android:textSize="35sp"

            ></Button>

        <Button

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="8"
            android:textSize="35sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="9"
            android:textSize="35sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:text="x"
            android:textSize="25sp"></Button>


    </LinearLayout>

    <!--    third  row   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:minHeight="0dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="4"
            android:textSize="35sp"

            ></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="5"
            android:textSize="35sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="6"
            android:textSize="35sp"></Button>

        <Button

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:text="-"
            android:textSize="40sp">

        </Button>


    </LinearLayout>

    <!--    fourth  row    -->


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="1"
            android:textSize="35sp"

            ></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="2"
            android:textSize="35sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="3"
            android:textSize="35sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:text="+"
            android:textSize="30sp"

            >

        </Button>

    </LinearLayout>


    <!--    Last Row  -->


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="0"
            android:textSize="35sp"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="."
            android:textSize="35sp"

            >

        </Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/standard_button"
            android:text="+/-"
            android:textSize="30sp"

            ></Button>


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_button"
            android:text="="
            android:textSize="45sp">

        </Button>


    </LinearLayout>


</LinearLayout>
        
        
        
        
        
        
    


